<idea-plugin>
    <id>net.iceyleagons.icicle.intellij</id>
    <name>Icicle Helper</name>
    <version>1.0.0</version>
    <vendor url="https://www.iceyleagons.net/">IceyLeagons</vendor>


    <extensions defaultExtensionNs="org.intellij.intelliLang">
        <languageSupport implementation="net.iceyleagons.iciclehelper.language.StringCodeLanguageInjectionSupport"/>
        <injectionConfig config="resources/javaInjections.xml"/>
    </extensions>

    <extensions defaultExtensionNs="com.intellij">
        <fileType
                name="StringCode File"
                implementationClass="net.iceyleagons.iciclehelper.language.StringCodeFileType"
                fieldName="INSTANCE"
                language="StringCode"
                extensions="strcode"/>
        <lang.parserDefinition
                language="StringCode"
                implementationClass="net.iceyleagons.iciclehelper.language.parser.StringCodeParserDefinition"/>
        <lang.syntaxHighlighterFactory
                language="StringCode"
                implementationClass="net.iceyleagons.iciclehelper.language.highlight.StringCodeSyntaxHighlighterFactory"/>
        <colorSettingsPage
                implementation="net.iceyleagons.iciclehelper.language.highlight.StringCodeColorSettingsPage"/>

        <daemon.highlightInfoFilter implementation="net.iceyleagons.iciclehelper.BeanErrorFilter"/>
    </extensions>

    <depends>com.intellij.modules.lang</depends>
    <depends config-file="StringCode-injections.xml">org.intellij.intelliLang</depends>
</idea-plugin>